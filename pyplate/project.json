{
    "PUB_META": {
        "META_SHORT_DESC": "A program for creating and building CLI/GUI/Packages in Python from a template",
        "META_VERSION": "1.0.5",
        "META_KEYWORDS": [
            "python",
            "cli",
            "template",
            "app",
            "package",
            "gui",
            "module",
            "gtk3"
        ],
        "META_DEPS": {
            "Python 3.10+": "https://python.org"
        },
        "META_CATS": []
    },
    "PUB_BL": {
        "SKIP_ALL": [
            ".git",
            ".venv*",
            ".VSCodeCounter",
            "*.code-workspace",
            "dist",
            "docs",
            "i18n",
            "log",
            "misc",
            "site",
            "todo",
            "LICENSE.txt",
            "requirements.txt",
            "**/__pycache__",
            "**/*.egg-info",
            "pyplate",
            "template"
        ],
        "SKIP_CONTENTS": [
            "**/*.png",
            "**/*.jpg",
            "**/*.jpeg",
            "**/*.ico"
        ],
        "SKIP_HEADER": [],
        "SKIP_CODE": [
            "conf"
        ],
        "SKIP_TREE": [
            ".git",
            ".venv*",
            ".VSCodeCounter",
            "dist",
            "site",
            "**/__pycache__",
            "**/*.egg-info"
        ]
    },
    "PUB_DBG": {
        "DBG_GIT": true,
        "DBG_VENV": true,
        "DBG_I18N": true,
        "DBG_DOCS": true,
        "DBG_TREE": true,
        "DBG_DIST": false
    },
    "PUB_DIST": {
        "bin": "assets",
        "conf": "assets",
        "i18n": "assets",
        "images": "assets",
        "install": "assets",
        "src": "assets",
        "requirements.txt": "assets/install",
        "template": "assets"
    },
    "PUB_DOCS": {
        "DOCS_THEME": "",
        "DOCS_USE_RM": true,
        "DOCS_MAKE_API": true,
        "DOCS_DIR_API": [
            "src"
        ]
    },
    "PUB_I18N": {
        "DOMAIN": "pyplate",
        "SOURCES": [
            "bin",
            "install",
            "src",
            "develop.py"
        ],
        "CLANGS": {
            "Python": [
                ".py"
            ],
            "Glade": [
                ".ui",
                ".glade"
            ],
            "Desktop": [
                ".desktop"
            ]
        },
        "WLANGS": [
            "en"
        ],
        "CHARSET": "UTF-8"
    },
    "PUB_INST": {
        "INST_NAME": "PyPlate",
        "INST_VER": "1.0.5",
        "INST_DESK": false,
        "INST_CONT": {
            "bin/pymaker": ".local/bin",
            "bin/pybaker": ".local/bin",
            "conf": ".local/share/pyplate",
            "i18n": ".local/share/pyplate",
            "images": ".local/share/pyplate",
            "install": ".local/share/pyplate",
            "src": ".local/share/pyplate",
            "uninstall.py": ".local/share/pyplate",
            "template": ".local/share/pyplate"
        },
        "UNINST_CONT": [
            ".local/bin/pymaker",
            ".local/bin/pybaker",
            ".local/share/pyplate"
        ]
    }
}