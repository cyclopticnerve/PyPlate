{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PM",
            "type": "debugpy",
            "request": "launch",
            "program": "PyPlate/src/pymaker.py",
            "console": "integratedTerminal",
            // run from above PyPlate project
            "cwd": "${workspaceFolder}/.."
        },
        {
            "name": "PM Args",
            "type": "debugpy",
            "request": "launch",
            "program": "PyPlate/src/pymaker.py",
            "console": "integratedTerminal",
            // run from above PyPlate project
            "cwd": "${workspaceFolder}/..",
            "args": "${command:pickArgs}"
        },
        {
            "name": "PB",
            "type": "debugpy",
            "request": "launch",
            "program": "PyPlate/src/pybaker.py",
            "console": "integratedTerminal",
            // run from above PyPlate project
            "cwd": "${workspaceFolder}/..",
            "args": [
                "-i"
            ]
        },
        {
            "name": "PB Args",
            "type": "debugpy",
            "request": "launch",
            "program": "PyPlate/src/pybaker.py",
            "console": "integratedTerminal",
            // run from above PyPlate project
            "cwd": "${workspaceFolder}/..",
            "args": [
                "-i",
                "${command:pickArgs}"
            ]
        }
    ]
}